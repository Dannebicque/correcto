<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
        <div class="container-fluid">
            <div class="row g-0">
                <nav class="col-md-3 col-lg-2 col-md-block sidebar">
                    Menu
                </nav>
                <main class="col-md-7 offset-md-3 offset-lg-2 col-lg-8">
                    <header class="header ressource">
                        {% block header %}<h1>Ressource ...</h1>{% endblock %}
                    </header>
                    {% block content %}{% endblock %}
                </main>
                <aside class="col-md-2 col-lg-2 px-md-4 sidebar-right">
                    Droite
                </aside>
            </div>
        </div>

        {% endblock %}
    </body>
</html>
